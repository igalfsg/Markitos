                        Fam Flegmann Sandler
                    </p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header" text-white bg-secondary>
                    Funeral Service
                </div>
                <div class="card-body">
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/0y6kTbR7oNI" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
            foreach (var story in _stories)
            {
                <div class="card mb-3">
                    <div class="card-header" text-white bg-secondary>
                        @story.Author
                    </div>
                    <div class="card-body">
                        @foreach (var paragraph in story.Story.Split("\n"))
                        {
                            if (!string.IsNullOrWhiteSpace(paragraph))
                            {
                                <p>@paragraph</p>
                            }
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p>sorry no stories to show right now</p>
        }

    </Authorized>
    <NotAuthorized>
        <a href="authentication/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>

